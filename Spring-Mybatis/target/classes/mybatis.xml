<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--settings：控制mybaits全局行为-->
    <settings>
        <!--设置mybatis 输出日志-->
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--设置别名-->
    <typeAliases>
        <!--那么：实体类的包名-->
        <package name="com.passerbyzh.domain"/>
    </typeAliases>


    <mappers>
        <package name="com.passerbyzh.dao"/>
    </mappers>
</configuration>
